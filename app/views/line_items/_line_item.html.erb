<% if line_item == @current_item %>
<tr id="current_item">
	<% else %>
<tr>
	<% end %>
	<td><%= line_item.quantity %>&times;</td>
	<td><%= line_item.product.title%></td>
	<td><%= button_to '&times:', line_items_decrement_path(product_id: line_item.product_id), remote: true %></td>
	<td class="total_cell"><%= number_to_currency(line_item.total_price)%></td>
</tr>
